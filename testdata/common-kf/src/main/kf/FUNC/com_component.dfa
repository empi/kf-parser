defclass: com_func_component();

Defun: com_comp_askComponentFileName (
#+
DesignLogic=yes
-------------------------------------------------------------------------------
Description:
#.
Get file name of ug_component.
.#
Example:
(String) file_name: com_getComponentFileName(MyComponent:)
-------------------------------------------------------------------------------
#-
Any $component #.Instance or Hostpointer of ug_component.#
)

@{
  java_exec( "de.conti.tires.kite.common.Component", "getComponentFileNameByComponent", { $component } );
} String;
#+
-------------------------------------------------------------------------------
Returns:
String - #.File name of component.#
-------------------------------------------------------------------------------
#-

# #####################################################################################################

defun: com_comp_askComponentLoadStatus(
#+
DesignLogic=no
-------------------------------------------------------------------------------
Description:
#.
Return ug_component load status.
-1, error
0, not loaded
1, fully loaded
2, partially loaded
.#
Example:
(Integer) comp_load_status: com_getComponentLoadStatus(my_component:)
-------------------------------------------------------------------------------
#-
Any $component #.Instance or Hostpointer of ug_component.#
)
@{
 java_exec( "de.conti.tires.kite.common.Component", "getComponentLoadStatus", { $component } );
} Integer;

# #####################################################################################################

defun: com_comp_changeComponentSource(
#+
DesignLogic=no
-------------------------------------------------------------------------------
Description:
#.
Change the components source. This is like a substitution of a component.
-1, error
0, on success

in TCE use com_comp_changeComponentSource(my_component:, "myNewSource", "B");
in Filesystem use com_comp_changeComponentSource(my_component:, "c:\path\myNewSource.prt");
.#
Example:
(Integer) comp_change_source: com_comp_changeComponentSource(my_component:, "myNewSource.prt")
-------------------------------------------------------------------------------
#-
Any $component; #.Instance or Hostpointer of ug_component.#
String $src; #.file name or item in TCE.#
String ($rev; "") #.TCE item revision.#
)
@{
 java_exec( "de.conti.tires.kite.common.Component", "changeComponentSource", { $component, $src, $rev } );
} Integer;

