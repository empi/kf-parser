#-
String $file #.Specify the file name with path.#
)
@{
  java_exec("de.conti.tires.kite.common.Xml", "fileExists", {$file});
} Boolean;
#+
-------------------------------------------------------------------------------
Returns:
Boolean - #.True if file exists.#
-------------------------------------------------------------------------------
#-

