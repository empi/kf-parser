defclass: com_func_pseq();

#+
  functions to access pitch sequences
#-

Defun: com_pseq_askPitchSequenceNames (
#+
DesignLogic=yes
-------------------------------------------------------------------------------
Description:
#.
get a list of pitch sequence names
.#
Example:
------------------------------------------------------------------------------
#-
String $filter #.pitch sequence name string.#
)
@{
	java_exec( "de.conti.tires.cad.kf.PitchSequenceKFInterface", "getSequenceNames", { $filter } );
} List;
#+
-------------------------------------------------------------------------------
Returns:
List - #.List of pitch sequence names.#
-------------------------------------------------------------------------------
#-

