#! NX/KF 5.0

DefClass: swd_Text ( ug_base_part %swd_version swd_ui_Text swd_element);

# icon name
(string) icon_name: "plus";

# application name
(string) application_name: "Text Editor";

(string) title: "SWD Text Editor " + version:;
(boolean) deleteTopInstance?: true;


(List Uncached) on_info: {"For more information about Text Editor please press <F1>.", " Current version: " + version: + "."};
(List Modifiable) layout: {};

(List Uncached) contour_file:		 com_askInstanceByClassName( "swd_contour" );




(Child) swd_geom_Text: {
  Class, swd_geom_Text;
  ok_to_create_geom, ok_to_create_geom:;
  layout, layout:;
	tilt_on_contour?, if length(contour_file:) = 1 then  root:swd_contour:tilt_text?: else false;	
  use_bottom_half?, if length(contour_file:) = 1 then  root:swd_contour:bottom_half?: else false;
};

